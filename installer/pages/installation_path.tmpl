<body onload="screenLayout();">
<!-- Header Div -->    
<div id="header_box" class="background_box"></div>

<!-- Body Div -->
<div class="body_content">
    <div id="message_title">
        <a>Please choose the installation path:</a>
    </div>

    <div id="message_body">
        <div id="radio1">
            <input type="radio" onclick="setNextPath('0')" checked="checked" name="clickRadio" value="auto_install" /><a>&nbsp;&nbsp;&nbsp;'/usr' &nbsp;&nbsp;(recommended)</a>
